{
    "extends": "eslint:recommended",
     "env" : {
       "browser" : true,
       "es6": true,
     },
     "parserOptions" : {
        "emcaVersion" : 7,
        "sourceType" : "module",
        "ecmaFeatures" : {
            jsx: true
        }
    },
    "parser": "babel-eslint",
    "plugins" : [
       "react"
    ],
    "rules": {
        "no-console": 1,
        "new-cap": 0,
        "strict": 0,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "eol-last": 0,
        "quotes": [2, "single"],
        "jsx-quotes": 1,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1
    },
    "globals": {
        "Promise": false
    }
}
